<div class="page-header">
  <h1>
    Bases
    <a href="/bases/new" class="btn btn-lg btn-success">New Basis</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Team</th>
        <th>Actions</th>
      </tr>

      <% @bases.each do |basis| %>
      <tr>
        <td><%= basis.name %></td>
        <td><%= basis.team.created_at %></td>
        <td>
          <a href="/bases/<%= basis.id %>" class="btn btn-primary">Show</a>
          <a href="/bases/<%= basis.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_basis/<%= basis.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bases, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
